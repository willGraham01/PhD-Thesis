% If you are getting two degrees, use \and between the names.
\def\degree#1{\setbox0\hbox{#1}  %for side effect of setting \@degreeword
  \gdef\@degree{#1}}

% \and is used inside the \degree argument to separate two degrees
\def\and{\gdef\@degreeword{degrees} \par and \par}
\def\degreemonthyear#1{\gdef\@degreemonthyear{#1}}

% input department name
\def\department#1{\gdef\@department{#1}}

\def\@standardcopyright{Attention is drawn to the fact that copyright of this thesis rests with the author.
A copy of this thesis has been supplied on condition that anyone who consults it is understood to recognise that its copyright rests with the author and that they must not copy it or use material from it except as permitted by law or with the consent of the author.}

\def\@norestriction{This thesis may be made available for consultation within the University Library and may be photocopied or lent to other libraries for the purposes of consultation.}

\def\@restriction[#1]{This thesis may not be consulted, photocopied or lent to other libraries without the permission of the author for #1 years from the date of acceptance of the thesis.}

\def\@declarepreviouswork{The material presented here for examination for the award of a higher degree by research has not been incorporated into a submission for another degree.
}

\def\@declareauthorship{I am the author of this thesis, and the work described therein was carried out by myself personally, without exception.}

\def\signature#1#2{\par\noindent#1\hspace{0.25\textwidth}\dotfill\null

  {\raggedleft \mbox{#2 \hspace{1in}}\par}}

% Format for the title page
\def\maketitle{
	\begin{titlepage}
		\setcounter{page}{0}
		\thispagestyle{empty}
		\parskip 10pt% plus 1fil minus 1fil
		\null\vfill
		\begin{center}
			\vfill
			\def\baselinestretch{1.2}
			{\def\baselinestretch{1.2}\Huge\bf \@title \par}
			
			\vfill
			
			{\huge \@author}
			
			\vfill
			
			{\large Thesis submitted for the degree of \@degree}
				
			{\huge University of Bath}
			
			{\Large \@department}
			
			\vfill
			
			{\Large \@degreemonthyear}
			\vfill
		\end{center} 
		% The \kern0pt pushes any depth into the height.  Thanks to Richard Stone.
		\par\kern 0pt\null
	\end{titlepage}
}

% Licensing page format
\def\License{
	\newpage\null\vfil
	% Copyright and license
	\begin{center}
		\bf COPYRIGHT
	\end{center}
	\vspace{\baselineskip}
	\@standardcopyright
	
	\noindent\@norestriction	
	
	%push the rest of these objects to the bottom page
	\vspace*{\fill}	
	
	% declaration of previous submission and authorship
	\begin{center}
		\bf DECLARATION OF ANY PREVIOUS SUBMISSION OF THE WORK
	\end{center}
	\vspace{\baselineskip}
	\@declarepreviouswork
	\begin{center}
		\signature{Candidate's signature}{\@author}
	\end{center}
	
	\vspace{\baselineskip}	
	
	\begin{center}
		\bf DECLARATION OF AUTHORSHIP
	\end{center}
	\vspace{\baselineskip}
	\@declareauthorship
	\begin{center}
		\signature{Candidate's signature}{\@author}
	\end{center}
}

